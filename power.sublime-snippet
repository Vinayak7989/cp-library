const int MOD = ${1:M};
int pw(int a, int b = MOD-2){
      int result = 1;
      while(b){
            if(b&1) result = result*1ll*a%MOD;
            a = a*1ll*a%MOD;
            b >>= 1;
      }
      return result;
}
]]></content>
